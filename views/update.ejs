<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <title>Drag and Drop l'archive du modpack</title>
    <style type="text/css">
        body {
            background-color: #2d2d2d;
            color: #fff;
            font-family: "Minecraft", sans-serif;
            font-size: 20px;
            line-height: 1.5;
        }
        h1 {
            margin: 50px auto;
            text-align: center;
            font-size: 40px;
            text-shadow: 2px 2px #000;
        }
        #dropzone {
            width: 400px;
            height: 200px;
            border: 2px dashed #ccc;
            text-align: center;
            padding: 10px;
            margin: 50px auto;
            background-color: #333;
            background-image: url("https://thenounproject.com/api/private/icons/212444/edit/?backgroundShape=SQUARE&backgroundShapeColor=%23000000&backgroundShapeOpacity=0&exportSize=752&flipX=false&flipY=false&foregroundColor=%23000000&foregroundOpacity=1&imageFormat=png&rotation=0&token=gAAAAABkD1EgAvWjf0fTHTirPLjycbmNjcLBe6x2Ltq0RbPKTKICEfsgA7rYuZm5QfduOi703QyIzwfqJjF-P6ERzSaaVaioVw%3D%3D");
            background-position: center;
            background-size: cover;
            color: #fff;
            font-size: 30px;
            font-weight: bold;
            text-shadow: 1px 1px #000;
            cursor: pointer;
        }
        #dropzone:hover {
            background-color: #555;
        }
        #dropzone:active {
            background-color: #777;
        }

        #dropzone.dragover {
            background-color: #f0f0f0;
        }

        #dropzone .icon {
            display: none;
            font-size: 72px;
        }

        #dropzone.dragover .icon {
            display: block;
        }
    </style>
</head>
<body>
<h1>Drag and Drop un dossier</h1>
<div id="dropzone">
    <div class="icon">üìÅ</div>
    D√©posez un dossier ici
</div>
<% if (message ) { %>
    <div class="popup <%= message.type %>">
        <p><%= message.text %></p>
    </div>
<% } %>
<script>
    const dropzone = document.getElementById('dropzone');
    const popup = document.getElementById('popup');
    const popupMessage = document.getElementById('popup-message');

    // √âv√©nement de d√©p√¥t de fichier
    dropzone.addEventListener('drop', function(e) {
        e.preventDefault();
        const files = e.dataTransfer.files;
        const formData = new FormData();
        for (let i = 0; i < files.length; i++) {
            formData.append('file', files[i]);
        }

        // Requ√™te AJAX pour t√©l√©charger le fichier
        const xhr = new XMLHttpRequest();
        xhr.open('POST', '/update/upload', true);
        xhr.onload = function() {
            if (xhr.status === 200) {
                // Si le fichier a √©t√© t√©l√©charg√© avec succ√®s, affiche un message de succ√®s
                console.log('Fichier d√©pos√© avec succ√®s');
                dropzone.classList.remove('dragover');
                dropzone.querySelector('.icon').style.display = 'none';
                dropzone.innerHTML = 'Fichier d√©pos√© avec succ√®s';
            } else {
                // Si une erreur est survenue, affiche un message d'erreur
                console.log('Erreur lors du t√©l√©chargement du fichier');
            }
        };
        xhr.send(formData);
    });

    dropzone.addEventListener('dragover', function(e) {
        e.preventDefault();
        dropzone.classList.add('dragover');
    });

    // √âv√©nement de sortie de la zone de d√©p√¥t
    dropzone.addEventListener('dragleave', function(e) {
        e.preventDefault();
        dropzone.classList.remove('dragover');
    });

    // √âv√©nement de fermeture de la popup
    popup.addEventListener('click', function(e) {
        e.preventDefault();
        popup.style.display = 'none';
        popup.classList.remove('error');
        popup.classList.remove('success');
    });

</script>
</body>
</html>